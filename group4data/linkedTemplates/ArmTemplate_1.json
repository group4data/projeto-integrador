					},
					{
						"name": "view frauds_by_shift_and_year",
						"description": "Criar view frauds_by_shift_and_year a partir de consulta",
						"type": "Script",
						"dependsOn": [
							{
								"activity": "Order by Ano desc",
								"dependencyConditions": [
									"Succeeded"
								]
